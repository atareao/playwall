        <key name="selected-video" type="s">
            <default>''</default>
            <summary>Selected video</summary>
            <description>The video to show as wallpaper</description>
        </key>
         <key name="volume" type="i">
            <default>0</default>
            <summary>Volume</summary>
            <description>The volume of the video</description>
        </key>
         <key name="playback" type="b">
            <default>true</default>
            <summary>Playback</summary>
            <description>If Playback the video</description>
        </key>
         <key name="loop" type="b">
            <default>true</default>
            <summary>Loop</summary>
            <description>If play video continuously</description>
        </key>
    </schema>
</schemalist>
